{
  "name": "sistema-alunos-igreja",
  "version": "1.0.0",
  "description": "Monorepo - Sistema de gerenciamento de alunos por classes et√°rias",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "backend": "npm run dev --workspace=backend",
    "frontend": "npm run dev --workspace=frontend",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend:migrate": "npm run migrate --workspace=backend",
    "backend:seed": "npm run seed --workspace=backend",
    "backend:start": "npm start --workspace=backend",
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=frontend",
    "start": "node src/server.js"
  },
  "keywords": [
    "monorepo",
    "igreja",
    "alunos",
    "classes"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}